<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.cancerhelpmate.ui.wellbeing.diet.DietViewModel"
            />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/colorGreyLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/diet_stats_popup_layout"
                    layout="@layout/diet_stats_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

                <include
                    android:id="@+id/diet_breakfast_popup_layout"
                    layout="@layout/diet_breakfast_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

                <include
                    android:id="@+id/diet_lunch_popup_layout"
                    layout="@layout/diet_lunch_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

                <include
                    android:id="@+id/diet_dinner_popup_layout"
                    layout="@layout/diet_dinner_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

                <include
                    android:id="@+id/diet_supper_popup_layout"
                    layout="@layout/diet_supper_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

                <include
                    android:id="@+id/diet_extra_popup_layout"
                    layout="@layout/diet_extra_popup"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</layout>