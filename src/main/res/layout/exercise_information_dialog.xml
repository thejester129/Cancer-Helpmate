<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="exercise"
            type="com.example.cancerhelpmate.ui.wellbeing.exercise.ExerciseItem"
            />

    </data>

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/diet_recipe_information_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/diet_recipe_information_close_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{exercise.title}"
                android:layout_gravity="center"
                style="@style/App.TextAppearance.Title_Toolbar"
                />

        </androidx.appcompat.widget.Toolbar>


        </LinearLayout>
</layout>