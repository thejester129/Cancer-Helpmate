<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:elevation="4dp"
    android:paddingTop="8dp"
    android:background="@android:color/white"
    android:layout_margin="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/day_tracker_recycler_item_emotion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/day_tracker_recycler_item_pain"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/day_tracker_recycler_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/App.TextAppearance.Large"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/day_tracker_recycler_item_pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/App.TextAppearance.Medium"
        android:layout_toRightOf="@+id/day_tracker_recycler_item_emotion"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/day_tracker_recycler_item_date"
        />

    <TextView
        android:id="@+id/day_tracker_recycler_item_fatigue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        style="@style/App.TextAppearance.Medium"
        android:layout_toRightOf="@+id/day_tracker_recycler_item_emotion"
        android:layout_below="@+id/day_tracker_recycler_item_pain"
        />

    <TextView
        android:id="@+id/day_tracker_recycler_item_appetite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/App.TextAppearance.Medium"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/day_tracker_recycler_item_emotion"
        android:layout_below="@+id/day_tracker_recycler_item_fatigue"
        />

    <ImageView
        android:id="@+id/day_tracker_recycler_item_pain_background"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
