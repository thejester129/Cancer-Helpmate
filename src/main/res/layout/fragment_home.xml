<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="exerciseViewModel"
            type="com.example.cancerhelpmate.ui.wellbeing.exercise.ExerciseViewModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyLight"
        android:orientation="vertical">

        <include
            android:id="@+id/home_welcome_layout"
            layout="@layout/home_welcome_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="160dp"
            />

        <include
            android:id="@+id/home_day_tracker_layout"
            layout="@layout/home_day_tracker_layout"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="8dp"
            />

        <include
            android:id="@+id/home_diet_stats_popup"
            layout="@layout/diet_stats_popup"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="8dp"
            />


    </LinearLayout>
</layout>