<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="exerciseViewModel"
            type="com.example.cancerhelpmate.ui.wellbeing.exercise.ExerciseViewModel"
            />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <include
                android:id="@+id/home_welcome_layout"
                layout="@layout/home_welcome_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="176dp"
                />

            <include
                android:id="@+id/home_day_tracker_layout"
                layout="@layout/day_tracker_today_popup"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="8dp"
                />

            <include
                android:id="@+id/home_diet_stats_popup"
                layout="@layout/diet_stats_popup"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="8dp"
                />

            <include
                android:id="@+id/home_activities_popup"
                layout="@layout/home_activities_popup"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </ScrollView>
</layout>