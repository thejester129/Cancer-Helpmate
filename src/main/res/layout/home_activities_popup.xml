<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="144dp">


        <ImageView
            android:id="@+id/diet_recipe_information_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/diet_stats_popup_header"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_activities_color"
            />

        <TextView
            android:id="@+id/diet_stats_popup_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_activities"
            style="@style/App.TextAppearance.Large"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/App.TextAppearance.Medium"
            android:layout_below="@+id/diet_recipe_information_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/tap_here_to_check_out_some_activities"
            />

        <Button
            android:id="@+id/activities_popup_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            />

    </RelativeLayout>
</layout>

